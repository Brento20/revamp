<div id="projectHead">
  <h2>Plumbing</h2>
  <p>Go with the flow</p>
  <br>
  <p>Don't lose your cool! <br>
  Try these helpful plumbing projects today!</p>
</div>

  {{#each projects as |project|}}
  <div id="projectBox">
    <ul>
      <br>
      <li><h3>{{project.issue}}</h3></li>
      <br>
      <img src="{{img_URL}}" width="250px"></img>
      <div>{{{project.instructions}}}</div><br>
      <div>Difficulty: {{project.difficulty}}</div><br><br>
    </ul>
    <img src="/assets/images/user.png" width="50px"></img>
    <p>Tip added by: Billy Bob</p>
  </div>

  {{/each}}

  {{#if logged_in}}
  <div>
  <p><a href='/addUserTip'>Add your tip here!</a></p>
  </div>
  <script src="/js/logout.js"></script>
  {{/if}}
